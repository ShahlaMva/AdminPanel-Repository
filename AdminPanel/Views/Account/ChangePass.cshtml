@model RegisterVM
@{
    ViewData["Title"] = "ChangePass";
}

<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-12"><h3 class="mb-0">General Form</h3></div>
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="#">Change Password</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change</li>
                    </ol>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row g-4">
                <!--begin::Col-->
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-12">
                    <!--begin::Quick Example-->
                    <div class="card card-primary card-outline mb-4">
                        <!--begin::Header-->
                        <div class="card-header"><div class="card-title">Edit User  <a class="btn btn-primary" href="#">Change Password</a></div></div>

                        <!--end::Header-->
                        <!--begin::Form-->
                        <form asp-action="ChangePass" method="post">
                            <input type="hidden" asp-for="@Model.Id" />
                            <!--begin::Body-->
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Old Password</label>
                                    <input asp-for="Password"
                                           type="text"
                                           class="form-control"
                                           id="exampleInputEmail1"
                                           aria-describedby="emailHelp" />

                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">New Password</label>
                                    <input asp-for="ConfirmPassword"
                                           type="text"
                                           class="form-control"
                                           id="exampleInputEmail1"
                                           aria-describedby="emailHelp" />

                                </div>
                            </div>
                            <!--end::Body-->
                            <!--begin::Footer-->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Change</button>

                            </div>
                            <!--end::Footer-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Quick Example-->

                </div>

            </div>
        </div>
    </div>
</main>


